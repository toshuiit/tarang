# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# AWS Configuration for Testing
# Copy this to .env and update with your AWS credentials when ready

# AWS Credentials (leave empty for local testing)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-west-2

# S3 Configuration
TARANG_S3_BUCKET=tarang-simulations-test
TARANG_S3_REGION=us-west-2

# EKS Configuration
TARANG_EKS_CLUSTER=tarang-test-cluster
TARANG_EKS_REGION=us-west-2
TARANG_K8S_NAMESPACE=tarang-simulations

# Docker Images
TARANG_SIMULATION_IMAGE=tarang/simulator:latest
TARANG_GPU_SIMULATION_IMAGE=tarang/simulator:gpu-latest

# Resource Limits (for testing)
DEFAULT_CPU_REQUEST=1
DEFAULT_MEMORY_REQUEST=2Gi
DEFAULT_CPU_LIMIT=2
DEFAULT_MEMORY_LIMIT=4Gi
MAX_CPU_LIMIT=4
MAX_MEMORY_LIMIT=8Gi
MAX_GPU_COUNT=1

# Job Configuration (for testing)
MAX_JOB_DURATION_HOURS=2
JOB_CLEANUP_AFTER_HOURS=1
MAX_CONCURRENT_JOBS_PER_USER=2

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/tarang/simulations
CLOUDWATCH_RETENTION_DAYS=7

# Testing Mode
ENABLE_COST_TRACKING=false
